<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
<!--    批量插入套餐菜品数据-->
    <insert id="batchInsert">
        insert into setmeal_dish values<foreach collection="setmealDishes" item="setmealDish" separator=",">
        (null,#{setmealDish.setmealId},#{setmealDish.dishId},#{setmealDish.name},
         #{setmealDish.price},#{setmealDish.copies})
    </foreach>

    </insert>
    <!--    根据套餐id批量删除套餐与菜品关联数据-->
    <delete id="deleteBySetmealIds">
        delete from setmeal_dish where setmeal_id in
                <foreach collection="setmealIds" item="setmealId" open="(" separator="," close=")">
                    #{setmealId}
                </foreach>
    </delete>
    <!--    获取套餐与套餐关联的菜品id的数量-->
    <select id="countByDishId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM setmeal_dish WHERE dish_id  in
        <foreach collection="dishIds" item="dishId" open="(" separator="," close=")">
            #{dishId}
        </foreach>

    </select>
</mapper>