<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishMapper">
    <!--新增菜品，注意：获取主键属性值的时候,如果sql在xml中那么useGenerateKeys和keyProperty必须在xml中-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into dish
        values (null, #{name}, #{categoryId}, #{price}, #{image}, #{description}, #{status},
                #{createTime}, #{updateTime}, #{createUser}, #{updateUser})
    </insert>
    <!--根据id批量删除菜品-->
    <delete id="deleteByIds">
        delete from dish where id in
            <foreach collection="ids" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
    </delete>
    <!--根据条件查询菜品-->
    <select id="list" resultType="com.sky.vo.DishVO">
        select t1.*,t2.name categoryName from dish t1,category t2 where t1.category_id=t2.id
        <if test="name!=null">
            and t1.name like concat('%',#{name},'%')
        </if>
        <if test="categoryId!=null">
            and t1.category_id =#{categoryId}
        </if>
        <if test="status!=null">
            and t1.status=#{status}
        </if>

    </select>
</mapper>